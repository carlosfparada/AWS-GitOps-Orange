#junos-config
groups {
    global {
        system {
            host-name Juniper-1;
            services {
                ssh {
                    root-login allow;
                }
            }
            login {
                user ec2-user {
                    class super-user;
                    authentication {
                        plain-text-password "Admin";
                    }
                }
            }
        }
    }
}
apply-groups global;